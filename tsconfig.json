{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"]
    },
    "types": ["chrome", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "manifest.json",
    "vite.config.ts",
    "e2e/**/*",
    "jest.setup.ts"
  ]
}
